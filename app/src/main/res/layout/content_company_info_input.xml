<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="100dp"
    android:paddingLeft="200dp"
    android:paddingRight="200dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_company_info_input">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/blueatg" />

    <TextView
        android:id="@+id/contact_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="Company Details"
        android:textSize="44dp" />

    <EditText
        android:id="@+id/num_operators"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style"
        android:hint="Number of Operators"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/hourly_pay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style"
        android:hint="Hourly Pay"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/hours_per_week"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style"
        android:hint="Hours Per Week"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/num_bottles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style"
        android:hint="Bottles Per Operator Per Day"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/machine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/machine_array"
        android:prompt="@string/machine_prompt"
        android:background="@drawable/edit_text_style"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/currency"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/currency_array"
        android:background="@drawable/edit_text_style"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_marginTop="20dp"
        android:text="Next"
        android:textColor="#fff"
        android:id="@+id/calculate"
        style="@style/Widget.AppCompat.Button.Colored"/>

</android.support.v7.widget.LinearLayoutCompat>
